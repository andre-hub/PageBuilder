{
    "name": "pagebuilder/static-site-builder",
    "description": "PHP 8 static site generator",
    "type": "project",
    "license": "GPL-3.0",
    "require": {
        "php": "^8.0",
        "league/commonmark": "^2.4",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "PageBuilder\\": "src/",
            "PageBuilder\\Builder\\": "src/Builder/",
            "PageBuilder\\Parser\\": "src/Parser/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
